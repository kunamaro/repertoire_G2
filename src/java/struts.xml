<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC "-//Apache software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.devMode" value="true" />
    <package name="mesAction" extends="struts-default">
        <action name="ajouterContact" class="action.AjouterContactAction" method="execute">
            <result name="success">index.jsp</result>
        </action>
        <action name="modifierContact" class="action.ModifierContactAction" method="execute">
            <result name="success">index.jsp</result>
            <result name="input">index.jsp</result>
        </action>
        <action name="supprimerContact" class="action.SupprimerContactAction" method="execute">
            <result name="success">index.jsp</result>
            <result name="input">index.jsp</result>
        </action>
    </package>

</struts>
